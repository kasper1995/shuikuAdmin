{
  "compilerOptions": {
    // 宽松模式（临时方案）
    "strict": false,
    // 或调整特定严格检查
    "noImplicitAny": false,
    "strictNullChecks": false,
    // 允许编译即使有错误（不推荐长期使用）
    "noEmitOnError": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src",
    "vite.config.ts"
  ]
}